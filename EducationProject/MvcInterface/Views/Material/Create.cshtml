
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<form asp-action="Create">
    @switch ((int)ViewBag.MaterialType)
    {

        case 0:
            await Html.PartialAsync("CreateVideo");
            break;
        case 1:
            await Html.PartialAsync("CreateBook");
            break;
        case 2:
            await Html.PartialAsync("CreateArticle");
            break;
    }
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>