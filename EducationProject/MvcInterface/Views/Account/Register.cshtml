@model MvcInterface.Models.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row justify-content-center">
        <h1>
            Регистрация
        </h1>
    </div>
    <div class="w-25 mx-auto shadow p-3 mb-5 bg-white rounded">
        <div class="align-content-center">
            <form asp-action="Register">
                <div class="form-group">
                    <div>Введите email</div>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Введите пароль</div>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Повторите пароль</div>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <input class="btn btn-success btn-lg" type="submit" value="Регистрация" class="btn btn-primary" />
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
        </div>
    </div>
</body>
</html>
