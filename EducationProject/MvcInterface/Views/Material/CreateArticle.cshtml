@model MvcInterface.Models.Models.CreateMaterialViewModel

<div class="form-group">
    <input type="hidden" value="Article" asp-for="Type" class="form-control" />
</div>
<div class="form-group">
    Название
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    Описание
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    URI
    <input asp-for="URI" class="form-control" />
    <span asp-validation-for="URI" class="text-danger"></span>
</div>
<div class="form-group">
    Дата публикации
    <input asp-for="PublicationDate" class="form-control" />
    <span asp-validation-for="PublicationDate" class="text-danger"></span>
</div>
