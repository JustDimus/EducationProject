
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создать новый материал</h1>
<a class="btn btn-primary btn-sm active" asp-action="Create" asp-route-materialType="Article"
   asp-route-addToCourseId="@ViewBag.addToCourseId">
    Статья
</a>
<a class="btn btn-primary btn-sm active" asp-action="Create" asp-route-materialType="Book"
   asp-route-addToCourseId="@ViewBag.addToCourseId">
    Книга
</a>
<a class="btn btn-primary btn-sm active" asp-action="Create" asp-route-materialType="Video"
   asp-route-addToCourseId="@ViewBag.addToCourseId">
    Видео
</a>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Create" asp-route-addToCourseId="@ViewBag.addToCourseId">
    @switch ((int)ViewBag.MaterialType)
    {
        case 0:
            <h3>Текущий выбор: Видео</h3>
            await Html.RenderPartialAsync("CreateVideo");
            break;
        case 1:
            <h3>Текущий выбор: Книга</h3>
            await Html.RenderPartialAsync("CreateBook");
            break;
        case 2:
            <h3>Текущий выбор: Статья</h3>
            await Html.RenderPartialAsync("CreateArticle");
            break;
    }
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="ShowPage">Показать все</a>
</div>
